<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ConfirmFlightActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login to Confirm Selected Flight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_username_edit_text"
            android:layout_width="256dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/username_hint"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <EditText
            android:id="@+id/login_password_edit_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/password_hint"
            android:hint="@string/password_hint"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
    </LinearLayout>

    <Button
        android:id="@+id/login_confirm_reservation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse" />

    <TextView
        android:id="@+id/info_username_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/info_flightCode_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="invisible"
        android:text="TextView" />

    <TextView
        android:id="@+id/info_depart_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="invisible"
        android:text="TextView" />

    <TextView
        android:id="@+id/info_arrive_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="invisible"
        android:text="TextView" />

    <TextView
        android:id="@+id/info_takeoff_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="invisible"
        android:text="TextView" />


    <TextView
        android:id="@+id/info_ticketNum_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="18sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/info_totalPrice_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="18sp"
        android:text="TextView" />

    <Button
        android:id="@+id/to_confirm_reservation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="Confirm!"
        android:visibility="invisible"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse" />


</LinearLayout>